
CREATE TABLE ProductModel(
		ProductModelID VARCHAR(20) NOT NULL,
		NAME VARCHAR(20) NOT NULL,
		DETALLES XMLTYPE NOT NULL);
		
ALTER TABLE ProductModel ADD CONSTRAINT PK_ProductModel
PRIMARY KEY (ProductModelID);

/*Poblar*/

